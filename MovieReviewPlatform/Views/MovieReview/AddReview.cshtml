@model MovieReviewPlatform.Models.Movie


@{
    ViewData["Title"] = "Add Review";
}

<h2>Add Review</h2>

<form asp-action="AddReview" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseYear"></label>
        <input asp-for="ReleaseYear" class="form-control" type="number" />
        <span asp-validation-for="ReleaseYear" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Review"></label>
        <textarea asp-for="Review" class="form-control"></textarea>
        <span asp-validation-for="Review" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
